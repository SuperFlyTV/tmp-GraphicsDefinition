{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://127.0.0.1:8084/json-schema/v1/graphics-manifest/standard.json",
    "allOf": [
        {
            "type": "object",
            "properties": {
                "actions": {
                    "type": "object",
                    "properties": {
                        "update": {
                            "description": "The 'update' action is called after the Graphic is loaded, and when new data is pushed to the Graphic.",
                            "$ref": "http://127.0.0.1:8084/json-schema/v1/lib/action.json"
                        },
                        "play": {
                            "description": "When the 'play' action is called, the Graphic will animate in.",
                            "$ref": "http://127.0.0.1:8084/json-schema/v1/lib/action-without-payload.json"
                        },
                        "stop": {
                            "description": "When the 'stop' action is called, the Graphic will animate out.",
                            "$ref": "http://127.0.0.1:8084/json-schema/v1/lib/action-without-payload.json"
                        },
                        "step": {
                            "allOf": [
                                {
                                    "$ref": "http://127.0.0.1:8084/json-schema/v1/lib/action.json"
                                },
                                {
                                    "type": "object",
                                    "description": "When 'play' action is called, the Graphic will animate in",
                                    "properties": {
                                        "schema": {
                                            "type": "object",
                                            "properties": {
                                                "type": {
                                                    "type": "string",
                                                    "const": "object"
                                                },
                                                "properties": {
                                                    "type": "object",
                                                    "properties": {
                                                        "delta": {
                                                            "type": "object",
                                                            "properties": {
                                                                "type": {
                                                                    "type": "string",
                                                                    "const": "number"
                                                                }
                                                            }
                                                        },
                                                        "goto": {
                                                            "type": "object",
                                                            "properties": {
                                                                "type": {
                                                                    "type": "string",
                                                                    "const": "number"
                                                                }
                                                            }
                                                        },
                                                        "skipAnimation": {
                                                            "type": "object",
                                                            "properties": {
                                                                "type": {
                                                                    "type": "string",
                                                                    "const": "boolean"
                                                                }
                                                            }
                                                        }
                                                    },
                                                    "required": [
                                                        "delta",
                                                        "goto",
                                                        "skipAnimation"
                                                    ],
                                                    "patternProperties": {
                                                        "^v_.*": {}
                                                    },
                                                    "additionalProperties": false
                                                }
                                            },
                                            "required": [
                                                "type",
                                                "properties"
                                            ],
                                            "additionalProperties": true
                                        }
                                    },
                                    "required": [
                                        "schema"
                                    ]
                                }
                            ]
                        }
                    },
                    "patternProperties": {
                        ".": {
                            "type": "object",
                            "$ref": "http://127.0.0.1:8084/json-schema/v1/lib/action.json"
                        }
                    },
                    "required": [],
                    "additionalProperties": true
                },
                "rendering": {
                    "type": "object",
                    "properties": {
                        "isExtensibleGraphic": {
                            "type": "boolean",
                            "const": false
                        },
                        "stepCount": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "isExtensibleGraphic",
                        "stepCount"
                    ],
                    "additionalProperties": true
                },
                "schema": {
                    "oneOf": [
                        {
                            "type": "object",
                            "$ref": "https://superflytv.github.io/GraphicsDataDefinition/gdd-meta-schema/v1/lib/object.json"
                        }
                    ]
                }
            },
            "required": [
                "schema"
            ],
            "additionalProperties": true
        },
        {
            "$ref": "http://127.0.0.1:8084/json-schema/v1/lib/common-graphics-schema.json"
        }
    ]
}
