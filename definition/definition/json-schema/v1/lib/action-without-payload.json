{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://127.0.0.1:8084/json-schema/v1/lib/action-without-payload.json",
    "type": "object",
    "properties": {
        "label": {
            "type": "string",
            "description": "The name of the action. This is displayed to the user."
        },
        "description": {
            "type": "string",
            "description": "A longer description of the action. This is displayed to the user."
        },
        "schema": {
            "description": "This action has no schema, simply set it to an empty object.",
            "type": "object",
            "properties": {},
            "additionalProperties": false
        }
    },
    "required": [
        "label",
        "schema"
    ],
    "patternProperties": {
        "^v_.*": {}
    },
    "additionalProperties": false
}
