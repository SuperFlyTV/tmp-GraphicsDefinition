{
    "$schema": "https://superflytv.github.io/tmp-GraphicsDefinition/definition/definition/json-schema/v1/graphics-manifest/schema.json",
    "name": "Simple Standard Graphic",
    "id": "standard",
    "version": "0",
    "main": "graphic.mjs",
    "customActions": {
        "highlight": {
            "label": "Highlight",
            "description": "Highlight the text",
            "schema": {
                "type": "object",
                "properties": {
                    "color": {
                        "type": "string",
                        "title": "Color",
                        "default": "red"
                    }
                }
            }
        }
    },
    "supportsRealTime": true,
    "supportsNonRealTime": true,
    "stepCount": 1,
    "schema": {
        "type": "object",
        "properties": {
            "text": {
                "description": "Text to display",
                "type": "string"
            }
        }
    }
}
