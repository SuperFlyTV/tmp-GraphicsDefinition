{
    "$schema": "http://127.0.0.1:8084/json-schema/v1/graphics-manifest/schema.json",
    "name": "Lower 3rd - Name",
    "description": "Name lower third",
    "id": "l3rd-name",
    "version": 0,
    "actions": {
        "highlight": {
            "title": "Highlight",
            "description": "Highlight the name",
            "schema": null
        }
    },
    "rendering": {
        "supportsRealTime": true,
        "supportsNonRealTime": true,
        "isExtensibleGraphic": false // false by default
    },
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "title": "Name",
                "default": "John Doe"
            }
        }
    }
}
